{% extends "BlogArticlesBundle::layout.html.twig" %}

{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block blogarticles_body %}

  <h2>Liste des articles</h2>

  <ul>
    {% for advert in listAdverts %}
      <li>
        <a href="{{ path('blog_articles_view', {'id': advert.id}) }}">
          {{ advert.title }}
        </a>
        par {{ advert.author }}
      </li>
    {% else %}
      <li>Pas (encore !) d'annonces</li>
    {% endfor %}
  </ul>

{% endblock %}
